# EditorConfig <https://editorconfig.org>

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.py]
max_line_length = 88

[*.{yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab
